---
import Layout from "../layouts/Layout.astro";
import ForgotPasswordForm from "../components/auth/ForgotPasswordForm";
import { Toaster } from "sonner";

export const prerender = false;
---

<Layout title="Forgot Password - JulklApp">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      {/* Card Container */}
      <div class="bg-white rounded-lg shadow-lg p-8 space-y-6">
        {/* Header */}
        <div class="text-center space-y-2">
          <h1 class="text-3xl font-bold text-gray-900">JulklApp</h1>
          <p class="text-sm text-gray-600">Reset your password</p>
        </div>

        {/* Forgot Password Form */}
        <ForgotPasswordForm client:load />
      </div>
    </div>
  </div>

  {/* Toast notifications */}
  <Toaster client:load position="top-center" />
</Layout>
